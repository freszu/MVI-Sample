<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.naniewicz.mvisample.feature.ScreensActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name"/>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/duckActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_duck"/>

    <Button
        android:id="@+id/loginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_activity"/>

    <Button
        android:id="@+id/testActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_test"/>

</LinearLayout>
